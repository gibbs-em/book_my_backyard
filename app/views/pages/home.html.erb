        <%= cl_image_tag gardenOne.photo.key, width: 25, height: 25, crop: :fill, class: "card-img-top" %>
      <% else %>
        <%= image_tag "backyard-default.jpg", width: 25, height: 25, crop: :fill, class: "card-img-top" %>
    <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= gardenOne.title %></h5>
    <p class="card-text"><%= gardenOne.description %></p>
    <p class="card-text"><small class="text-muted"><%= gardenOne.address %></small></p>
  </div>
