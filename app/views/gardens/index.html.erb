<%# <div class="container "> %>

  <h1 class= "m-5">All Gardens</h1>


  <%# <div class="main-container"> %>
  <div class="d-flex">
    <%# --- Garden Cards --- %>
    <div class="cards row ml-4">
      <% @gardens.each do |garden| %>
      <div class="card card-rounded m-2" style="width: 12rem;">
        
          <% if garden.photo.attached? %>
              <%= cl_image_tag garden.photo.key, height: 180, crop: :fill, class: "card-img-top" %>
            <% else %>
              <%= image_tag "backyard-default.jpg", height: 180, crop: :fill, class: "card-img-top" %>
          <% end %>

          <div class="card-body ml-3">
            <h5 class="card-title divider"> <%= garden.title %> </h5>
            <p class="card-text"> Fit: <%= garden.capacity %> people </p>
            <p class="card-text"> Â£<%= garden.price.round %> /day </p>
            <%# <p class="card-text text-truncate"> <%= garden.description %>
            <%= link_to "Details", garden_path(garden), class: "btn btn-outline-primary btn-rounded text-center" %>
          </div>

        </div>
      <% end %>
    </div>

    <%# --- MAP --- %>
    <div id="map"
        style="width: 100%; height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>

<%# </div> %>
